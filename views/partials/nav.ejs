<style>
/* BlogiFY Enhanced Navigation Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.navbar {
  background: linear-gradient(135deg, #000000 0%, #201943 100%) !important;
  padding: 1rem 0;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: visible; /* Changed from hidden to visible */
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  z-index: 1050; /* Added high z-index */
}

.navbar::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.8s ease;
}

.navbar:hover::before {
  left: 100%;
}

.container-fluid {
  max-width: 1200px;
  margin: 0 auto;
}

.navbar-brand {
  font-size: 2rem !important;
  font-weight: 700;
  color: #fff !important;
  text-decoration: none;
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4, #45b7d1);
  background-size: 200% 200%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: gradientFlow 4s ease infinite;
  transition: all 0.3s ease;
  position: relative;
}

.navbar-brand:hover {
  transform: scale(1.05);
  text-shadow: 0 0 20px rgba(255, 255, 255, 0.5);
}

@keyframes gradientFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.navbar-toggler {
  border: none;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8px;
  padding: 8px 12px;
  transition: all 0.3s ease;
}

.navbar-toggler:hover {
  background: rgba(255, 255, 255, 0.2);
  transform: scale(1.1);
}

.navbar-toggler:focus {
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.3);
  outline: none;
}

.navbar-toggler-icon {
  background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.8%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
}

.navbar-collapse {
  transition: all 0.3s ease;
}

.navbar-nav {
  margin-left: auto;
  align-items: center;
}

.nav-item {
  margin: 0 5px;
  position: relative;
}

/* Fix for dropdown positioning */
.nav-item.dropdown {
  position: static; /* Changed to static for better dropdown positioning */
}

.nav-link {
  color: rgba(255, 255, 255, 0.9) !important;
  font-weight: 500;
  padding: 10px 20px !important;
  border-radius: 25px;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  text-decoration: none;
  overflow: hidden;
}

.nav-link::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.nav-link:hover::before {
  left: 100%;
}

.nav-link:hover {
  color: #fff !important;
  background: rgba(255, 255, 255, 0.15);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.nav-link.active {
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4) !important;
  color: #fff !important;
  box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  position: relative;
}

.nav-link.active::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  width: 80%;
  height: 2px;
  background: #fff;
  transform: translateX(-50%);
  border-radius: 2px;
}

.dropdown-toggle::after {
  transition: transform 0.3s ease;
  margin-left: 8px;
}

.dropdown:hover .dropdown-toggle::after {
  transform: rotate(180deg);
}

.dropdown-menu {
  background: rgba(255, 255, 255, 0.95) !important;
  backdrop-filter: blur(20px);
  border: none;
  border-radius: 15px;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  margin-top: 5px;
  margin-left: 1200px;
  padding: 15px;
  min-width: 200px;
  animation: fadeInDown 0.3s ease;
  z-index: 1060; /* Added high z-index for dropdown */
  position: absolute; /* Ensure absolute positioning */
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.dropdown-item {
  color: #333 !important;
  padding: 12px 16px;
  border-radius: 10px;
  transition: all 0.3s ease;
  margin: 5px 0;
  font-weight: 500;
}

.dropdown-item:hover {
  background: linear-gradient(45deg, #667eea, #764ba2) !important;
  color: #fff !important;
  transform: translateX(5px);
}

/* Alert Styles */
.alert {
  border: none;
  border-radius: 15px;
  padding: 20px;
  margin: 20px 0;
  animation: slideInUp 0.5s ease;
}

.alert-danger {
  background: linear-gradient(45deg, rgba(255, 99, 132, 0.1), rgba(255, 99, 132, 0.05));
  border-left: 4px solid #ff6384;
  color: #d63384;
  backdrop-filter: blur(10px);
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 991.98px) {
  .navbar-collapse {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-radius: 15px;
    margin-top: 15px;
    padding: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    z-index: 1055; /* Added z-index for mobile */
  }
  
  .nav-link {
    color: #333 !important;
    margin: 5px 0;
    border-radius: 10px;
  }
  
  .nav-link:hover {
    background: linear-gradient(45deg, #667eea, #764ba2) !important;
    color: #fff !important;
  }
  
  .nav-link.active {
    background: linear-gradient(45deg, #ff6b6b, #4ecdc4) !important;
    color: #fff !important;
  }
  
  .dropdown-menu {
    position: static !important;
    float: none;
    background: rgba(0, 0, 0, 0.05) !important;
    box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.1);
    margin: 10px 0;
    z-index: auto; /* Reset z-index for mobile */
  }
  
  .dropdown-item {
    color: #333 !important;
  }
}

@media (max-width: 576px) {
  .navbar-brand {
    font-size: 1.5rem !important;
  }
  
  .container-fluid {
    padding: 0 15px;
  }
}

/* Focus States for Accessibility */
.nav-link:focus,
.dropdown-item:focus,
.navbar-toggler:focus {
  outline: 2px solid rgba(255, 255, 255, 0.5);
  outline-offset: 2px;
}

/* Smooth Scrolling */
html {
  scroll-behavior: smooth;
}

/* Loading Animation */
.navbar-brand::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  width: 0;
  height: 2px;
  background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
  transition: all 0.3s ease;
  transform: translateX(-50%);
}

.navbar-brand:hover::after {
  width: 100%;
}

/* Glowing effect */
.nav-link.active {
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  from {
    box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
  }
  to {
    box-shadow: 0 4px 20px rgba(255, 107, 107, 0.5);
  }
}
</style>

<nav class="navbar navbar-expand-lg navbar-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">SnapBoard</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">Home</a>
        </li>
        
        <% if (locals.user) { %>
          <li class="nav-item">
            <a class="nav-link" href="/blog/add-new">Add Snap</a>
          </li>
          
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Profile
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
              <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
              <li><a class="dropdown-item" href="#">Settings</a></li>
            </ul>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/user/signup">Create Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user/signin">Sign In</a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>

<% if(locals.error){ %>
  <div class="container mt-4">
    <div class="alert alert-danger" role="alert">
      <%= locals.error %>
    </div>
  </div>
<% } %>